{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES2020",
    "lib": ["dom", "es2017"],
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "lib/esm",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.d.ts",
  ],
}